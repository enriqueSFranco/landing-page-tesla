---
const { sectionTitle, sectionLegend, heroImage } = Astro.props;
---

<section
	id='section'
	data-color='#000'
	class='w-full h-screen bg-black relative snap-always snap-center grid place-items-center'>
	<div class='h-full w-full absolute'>
		<img
			src={heroImage}
			alt={sectionTitle}
			class='object-cover object-center max-w-full min-h-screen'
		/>
	</div>

	<div class='absolute top-16 flex flex-col items-center gap-4 w-1/2 h-[650px]'>
		<h2
			class='text-black capitalize font-semibold text-5xl tracking-wider mt-12'>
			{sectionTitle}
		</h2>
		<a
			href=''
			class='text-black capitalize underline decoration-solid underline-offset-4'
			>{sectionLegend}</a
		>
	</div>
	<slot />
</section>
