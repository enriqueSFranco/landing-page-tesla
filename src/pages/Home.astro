---
import mainVideo from '/assets/video/Homepage-Test_Drive.mp4';
---

<section
	class='w-full h-full bg-slate-500 grid place-items-center overflow-hidden relative'>
	<video
		autoplay
		loop
		class='min-w-full w-full min-h-screen h-full object-cover block'>
		<source src={mainVideo} type='video/mp4' />
	</video>
	<div
		class='w-1/2 grid place-items-center absolute top-32 text-white outline outline-2 outline-red-500'>
		<div class='flex flex-col items-center gap-1'>
			<h1 class='capitalize font-semibold text-5xl tracking-wider'>
				experience tesla
			</h1>
			<p class='text-sm'>Schedule a Demo Drive Today</p>
		</div>
		<a
			href=''
			class='border-[3px] border-white px-6 py-1 w-[260px] h-[40px] text-center capitalize rounded-md'
			>demo drive</a
		>
	</div>
</section>
